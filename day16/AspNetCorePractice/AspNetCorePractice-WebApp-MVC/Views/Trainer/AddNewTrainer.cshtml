@model AspNetCorePractice_WebApp_MVC.Models.Trainer

@{
    Layout = "_Layout1";
}
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="/signup-form-02/fonts/icomoon/style.css">

    <link rel="stylesheet" href="/signup-form-02/css/owl.carousel.min.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/signup-form-02/css/bootstrap.min.css">

    <!-- Style -->
    <link rel="stylesheet" href="/signup-form-02/css/style.css">

    <title>Sign Up #2</title>
  </head>
  <body>


  <div class="d-lg-flex half">
    <div class="bg order-1 order-md-2" style="background-image: url('/signup-form-02/images/bg_1.jpg');"></div>
    <div class="contents order-2 order-md-1">

      <div class="container">
        <div class="row align-items-center justify-content-center">
          <div class="col-md-7 py-5">
            <h3>Register Trainer</h3>
            <p class="mb-4">Information is a source of learning. But unless it is organized, processed, and available to the right people in a format for decision making, it is a burden, not a benefit.</p>
            <form asp-action="AddNewTrainer" method="post">
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group first">
                    <label for="fname">Trainer Name</label>
                    <input type="text" class="form-control" placeholder="Enter The Trainer Name" id="fname" asp-for=TrainerName/>
                  </div>    
                </div>
                <div class="col-md-6">
                  <div class="form-group first">
                    <label for="lname">Trainer Skill</label>
                    <input type="text" class="form-control" placeholder="Enter Trainer Skills" id="lname" asp-for=Skills/>
                  </div>    
                </div>
              </div>
              <div class="row">
                <div class="col-md-12">
                  <div class="form-group first">
                    <label for="email">Experience</label>
                    <input type="YOE" class="form-control" placeholder="Enter Year of Experience" id="YOE" asp-for=YearOfExperience/>
                  </div>    
                </div>
              </div>
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group first">
                    <label for="email">Email</label>
                    <input type="text" class="form-control" placeholder="Enter Email" id="email" asp-for=Email/>
                  </div>    
                </div>
                <div class="col-md-6">
                  <div class="form-group first">
                    <label for="lname">Trainer Contact</label>
                    <input type="contact" class="form-control" placeholder="Enter Contact" id="contact" asp-for=Contact/>
                  </div>    
                </div>
              </div>

              <input type="submit"  class="btn px-5 btn-primary">

            </form>
          </div>
        </div>
      </div>
    </div>


  </div>



    <script src="/signup-form-02/js/jquery-3.3.1.min.js"></script>
    <script src="/signup-form-02/js/popper.min.js"></script>
    <script src="/signup-form-02/js/bootstrap.min.js"></script>
    <script src="/signup-form-02/js/main.js"></script>
  </body>
</html>